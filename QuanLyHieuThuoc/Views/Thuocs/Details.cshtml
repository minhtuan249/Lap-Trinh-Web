@model QuanLyHieuThuoc.Models.Entity.Thuoc

@{
    ViewData["Title"] = "Chi tiết thuốc";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="bi bi-capsule me-2"></i> Chi tiết thuốc</h4>
            <a asp-action="Index" class="btn btn-light btn-sm">
                <i class="bi bi-arrow-left"></i> Quay lại
            </a>
        </div>

        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 fw-semibold text-secondary">
                    Tên thuốc
                </dt>
                <dd class="col-sm-9">
                    @Model.TenThuoc
                </dd>

                <dt class="col-sm-3 fw-semibold text-secondary">
                    Mô tả
                </dt>
                <dd class="col-sm-9">
                    @Model.MoTa
                </dd>

                <dt class="col-sm-3 fw-semibold text-secondary">
                    Quy cách đóng gói
                </dt>
                <dd class="col-sm-9">
                    @Model.QuyCachDongGoi
                </dd>

                <dt class="col-sm-3 fw-semibold text-secondary">
                    Giá bán
                </dt>
                <dd class="col-sm-9 text-danger fw-bold">
                    @string.Format("{0:N0} ₫", Model.GiaBan)
                </dd>

                <dt class="col-sm-3 fw-semibold text-secondary">
                    Số lượng tồn
                </dt>
                <dd class="col-sm-9">
                    @Model.SoLuongTon
                </dd>

                <dt class="col-sm-3 fw-semibold text-secondary">
                    Loại thuốc
                </dt>
                <dd class="col-sm-9">
                    @(Model.LoaiThuoc != null ? Model.LoaiThuoc.TenLoaiThuoc : "Không xác định")
                </dd>

                <dt class="col-sm-3 fw-semibold text-secondary">
                    Trạng thái
                </dt>
                <dd class="col-sm-9">
                    @if (Model.IsDeleted)
                    {
                        <span class="badge bg-danger">Ngừng bán</span>
                    }
                    else
                    {
                        <span class="badge bg-success">Đang kinh doanh</span>
                    }
                </dd>
            </dl>
        </div>

        <div class="card-footer text-end bg-light">
            <a asp-action="Edit" asp-route-id="@Model.ThuocId" class="btn btn-warning me-2">
                <i class="bi bi-pencil"></i> Sửa
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-list"></i> Quay lại danh sách
            </a>
        </div>
    </div>
</div>
