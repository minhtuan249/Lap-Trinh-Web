@model IEnumerable<QuanLyHieuThuoc.Models.Entity.NhanVien>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

@if (User.IsInRole("Quản lý") || User.IsInRole("Dược sĩ"))
{
    <p>
        <a asp-action="Create">Tạo Nhân Viên Mới</a>
    </p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.HoTen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ChucVu)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SoDienThoai)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TenDangNhap)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MatKhau)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsDeleted)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.HoTen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ChucVu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoDienThoai)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenDangNhap)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MatKhau)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsDeleted)
            </td>
            <td>
                 @if (User.IsInRole("Quản lý"))
                 {
                    <a asp-action="Edit" asp-route-id="@item.NhanVienId">Edit</a> 
                    <a asp-action="Delete" asp-route-id="@item.NhanVienId">Delete</a>
                    }
                
                <a asp-action="Details" asp-route-id="@item.NhanVienId">Details</a> |
                
            </td>
        </tr>
}
    </tbody>
</table>
