@model QuanLyHieuThuoc.Models.Entity.Thuoc

@{
    ViewData["Title"] = "Thuốc: " + Model.TenThuoc;
    Layout = "_Layout";
}

<style>
    .details-container {
        background-color: #0d1a26;
        color: #88ffff;
        min-height: 100vh;
        padding: 60px 0;
        font-family: 'Consolas', monospace;
    }

    body {
        background-color: #0d1a26 !important;
    }

    .details-card {
        max-width: 700px;
        margin: 40px auto;
        background: rgba(1, 25, 35, 0.95);
        border: 1px solid #00aaff;
        border-radius: 5px;
        padding: 30px;
        box-shadow: 0 0 20px rgba(0, 255, 255, 0.2);
    }

    .title {
        font-size: 2.2rem;
        letter-spacing: 4px;
        text-transform: uppercase;
        color: #00ffff;
        text-shadow: 0 0 10px #00ffff;
        margin-bottom: 40px;
        text-align: center;
    }

    dl {
        display: grid;
        grid-template-columns: 1fr 2fr;
        gap: 15px 30px;
        text-align: left;
    }

    dt {
        font-weight: bold;
        color: #00ffff;
        text-transform: uppercase;
    }

    dd {
        margin: 0;
        color: #ffffff;
        border-bottom: 1px dashed rgba(0, 255, 255, 0.3);
        padding-bottom: 5px;
    }

    .actions {
        margin-top: 30px;
        text-align: center;
    }

    .btn-action {
        display: inline-block;
        background: #00aaff;
        border: 1px solid #00aaff;
        color: #0d1a26;
        padding: 8px 20px;
        border-radius: 3px;
        text-decoration: none;
        font-weight: bold;
        transition: all 0.3s;
        box-shadow: 0 0 10px rgba(0, 170, 255, 0.5);
    }

        .btn-action:hover {
            background: #00ccff;
            box-shadow: 0 0 20px #00aaff;
        }

    .btn-secondary {
        background: none;
        color: #00ffcc;
        border-color: #00ffcc;
    }
</style>

<div class="details-container">
    <div class="details-card">
        <h1 class="title">DƯỢC PHẨM</h1>
        <p style="color: #00ffcc; text-align: center; margin-top: -30px;">@Model.TenThuoc</p>
        <dl>
            <dt>MÔ TẢ</dt>
            <dd>@Model.MoTa</dd>

            <dt>QUY CÁCH</dt>
            <dd>@Model.QuyCachDongGoi</dd>

            <dt>GIÁ BÁN</dt>
            <dd style="color: #ff66ff;">@Model.GiaBan.ToString("N0") VNĐ</dd>

            <dt>TỒN KHO</dt>
            <dd>@Model.SoLuongTon</dd>

            <dt>LOẠI THUỐC</dt>
            <dd>@(Model.LoaiThuoc?.TenLoaiThuoc ?? "UNKNOWN")</dd>

            <dt>TRẠNG THÁI</dt>
            <dd style="color: @(Model.IsDeleted ? "#ff6666" : "#00ff00");">
                @(Model.IsDeleted ? "TẠM HẾT" : "CÒN HÀNG")
            </dd>
        </dl>
        <div class="actions">
            <a asp-controller="Thuocs" asp-action="Edit" asp-route-id="@Model.ThuocId" class="btn-action">CHỈNH SỬA</a>
            <a asp-controller="Shop" asp-action="Index" class="btn-action btn-secondary">QUAY LẠI</a>
        </div>
    </div>
</div>
